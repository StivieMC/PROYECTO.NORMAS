@model IEnumerable<Normas.Web.Client.Models.NormaVM>

@{
    ViewData["Title"] = "Index";
}
<font color="blue" face="Book antiqua,arial">
    <h1>Catálogo de normas</h1>
</font>

<div class="container">
    <div class="col-md-5">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Listado de normas</li>
        </ol>
    </div>

    <div>
        @*<a asp-action="Create"> Nueva </a>*@
        @Html.ActionLink("Nueva", "Create", new { @class = "btn btn-primary" }) |
    </div>
    <hr />
   <table id="tblData" class="table table-striped table-bordered">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Clave)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Requisito.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaPublicacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activo)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.ActionLink(item.Clave, "Details", new { id = item.NormaID }, null /* html attributes -nombre del link- */)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Requisito.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaPublicacion, "{0:dd/mm/yyy}", new { @type = "date" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activo)
                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>

    @section Scripts
{
        <script>
            $(document).ready(function () {
                $('#tblData').DataTable();
            });
        </script>
    }

