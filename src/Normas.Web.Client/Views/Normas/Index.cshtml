    <div class="col-12">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item">Listado de normas</li>
        </ol>
    </div>

    <p>
        <a asp-action="Create" class="btn btn-primary">Nueva</a>

    </p>
    <hr />
    <table id="tblData" class="table table-striped table-bordered">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Clave)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Requisito.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaPublicacion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activo)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.ActionLink(item.Clave, "Details", new { id = item.NormaID }, null /* html attributes -nombre del link- */)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Requisito.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaPublicacion, "{0:dd/mm/yyy}", new { @type = "date" })
                    </td>
                    <td align="center">
                        @*@Html.DisplayFor(modelItem => item.Activo)*@

                        @if (item.Activo)
                        {<i class="fa fa-check-circle-o" aria-hidden="true"></i>}

                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>

    @section Scripts
{
        <script>
            $(document).ready(function () {
                $('#tblData').DataTable();
            });
        </script>
    }

