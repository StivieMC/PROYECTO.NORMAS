@model Normas.Web.Client.Models.NormaVM

@{
    ViewData["Title"] = "Editar Normas";
}
<font color="blue" face="Book antiqua,arial">
    <h1>Catalogo de normas</h1>
</font>
    @*<h4>NormaMV</h4>*@
 
<div class="container">
    @*<div class="col-md-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">Listado de normas / Consulta / Edicion</li>

            </ol>
        </div>
        <a asp-action="Index" class="btn btn-primary">Listado de Normas</a>*@

    <div class="col-12">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Normas">Listado de normas</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-controller="Normas" asp-route-id="@Model.NormaID">Consulta</a></li>
            <li class="breadcrumb-item">Actualizar</li>
        </ol>
    </div>

    <p>
        <a asp-action="Index" class="btn btn-primary">Listado de Normas</a>

    </p>
    <h5>Actualizar</h5>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="NormaID" />
                <div class="form-group">
                    <label asp-for="Clave" class="control-label"></label>
                    <input asp-for="Clave" class="form-control" />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaPublicacion" class="control-label"></label>
                    <input asp-for="FechaPublicacion" class="form-control" />
                    <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                    </label>
                </div>
                @*<div class="form-group">
                        <label asp-for="TipoRequisitoId" class="control-label"></label>
                        <input asp-for="TipoRequisitoId" class="form-control" />
                        <span asp-validation-for="TipoRequisitoId" class="text-danger"></span>
                    </div>*@
                <div class="form-group">
                    <label asp-for="Requisito" class="control-label"></label>
                    <select asp-for="TipoRequisitoId" class="form-control" asp-items="ViewBag.TipoRequisitoId">
                        <option value="">-- Selecciona Tipo Requisito --</option>
                    </select>
                    <span asp-validation-for="TipoRequisitoId" class="text-danger" />
                </div>

                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" /> |
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    @*<a asp-action="Index">Cancelar</a>*@
                </div>
            </form>
        </div>

        @* ------------------------comienza otro formulario----------------------------*@


    </div>

</div>
        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
